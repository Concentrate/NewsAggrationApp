<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/news_cell_item_height"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <TextView
        android:id="@+id/news_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxEms="10"
        android:maxLines="2"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="安居客垃圾坑垃圾啊看了就拉进来的静安立刻据了解阿拉基大家ldjkjdkjkdjkajkdjjdkjkjd" />

    <TextView
        android:id="@+id/news_publish_source_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textColor="@color/md_grey_500"
        android:textSize="@dimen/news_small_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="publish " />

    <TextView
        android:id="@+id/news_publish_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textSize="@dimen/news_small_text_size"
        app:layout_constraintBottom_toBottomOf="@id/news_publish_source_tv"
        app:layout_constraintLeft_toRightOf="@id/news_publish_source_tv"
        app:layout_constraintTop_toTopOf="@id/news_publish_source_tv"
        tools:text="11:00" />

    <TextView
        android:id="@+id/news_comment_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:textSize="@dimen/news_small_text_size"
        app:layout_constraintBottom_toBottomOf="@id/news_publish_time_tv"
        app:layout_constraintRight_toLeftOf="@id/news_display_image_iv"
        app:layout_constraintTop_toTopOf="@id/news_publish_time_tv"
        tools:text="评论数" />


    <ImageView
        android:id="@+id/news_display_image_iv"
        android:layout_width="@dimen/news_single_pic_display_size"
        android:layout_height="@dimen/news_single_pic_display_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>