<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/root"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/bg_progressdialog"
                android:paddingTop="24dp"
                android:paddingBottom="16dp">

    <RelativeLayout
        android:layout_marginTop="19dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/customProgressView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/ic_loading_big"
            android:id="@+id/iv_loading"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true" />
        <TextView
            android:id="@+id/progress"
            android:textSize="11sp"
            android:textColor="@color/md_blue_200"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/customProgressView"
        android:layout_centerHorizontal="true"
        android:paddingTop="20dp"
        android:gravity="center_horizontal|center_vertical"
        android:textColor="@color/md_green_200"
        android:textSize="14sp">
    </TextView>

</RelativeLayout>