<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/zhihu_theme_cell_item_size"
    android:layout_height="@dimen/zhihu_theme_cell_item_size"
    android:paddingLeft="8dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/theme_avater"
        android:layout_width="match_parent"
        android:layout_height="120dp" />

    <TextView
        android:id="@+id/theme_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="12sp"
        tools:text="title" />

    <TextView
        android:id="@+id/theme_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:textColor="@color/md_grey_800"
        android:textSize="12sp"
        tools:text="abcjlajdljaljdlkajldjaljdljaljdjljdlkjajld" />

</LinearLayout>